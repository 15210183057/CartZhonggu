<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@mipmap/myloginbg2">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/bulucentre"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/login_white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/loginuser"/>
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:hint="请输入用户名"
            android:layout_marginLeft="20dp"
            android:textCursorDrawable="@drawable/edit_bg"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/denglu_bg"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/login_white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/loginpassword"/>
        <EditText
            android:textSize="14sp"
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"

            android:textCursorDrawable="@drawable/edit_bg"
            android:gravity="center_vertical"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/denglu_bg"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/denglu_bg"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:text="登陆"
        android:textColor="#fff"
        android:textCursorDrawable="@drawable/edit_bg"
        android:textSize="20sp"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_password2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="忘记密码？"
        android:textColor="@color/titleBar"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京中古车网科技有限公司"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"/>
    </RelativeLayout>

</LinearLayout>