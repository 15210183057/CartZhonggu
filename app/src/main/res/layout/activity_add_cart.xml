<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a123456.zhonggu.AddCartActivity">
    <include
        layout="@layout/top_titlebar"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/edt_addcart"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:background="@drawable/rednull"
        android:hint="请输入要添加的车商信息"
        android:textSize="16sp"
        />
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_Addcart"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认添加"
        android:background="@drawable/denglu_bg"
        android:textColor="#fff"
        />
</LinearLayout>
