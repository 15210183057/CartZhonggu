<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="18dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_item_mylv"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@mipmap/update"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/img_item_mylv_select"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon01" />
        <RelativeLayout
            android:layout_toRightOf="@id/img_item_mylv"
            android:layout_toLeftOf="@id/img_item_mylv_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name_mylvitem"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="大众"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_num_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="1234244444444444"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                />
            <View
                android:id="@+id/line_mylvitem"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff0000"
                android:layout_centerVertical="true"
                android:layout_below="@id/tv_name_mylvitem"/>
            <TextView
                android:id="@+id/tv_company_mylvitem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="中古测试cescescecsc"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_num2_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="津MRW434"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F8F8FF"
        android:layout_below="@id/img_item_mylv"
        android:layout_marginRight="10dp"/>
</LinearLayout>
