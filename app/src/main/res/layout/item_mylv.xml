<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/img_item_mylv"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@mipmap/update"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/img_item_mylv_select"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon01" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_item_mylv_select"
            android:layout_toRightOf="@id/img_item_mylv">

            <TextView
                android:id="@+id/tv_name_mylvitem"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="大众"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_num_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_name_mylvitem"
                android:layout_alignBottom="@+id/tv_name_mylvitem"
                android:layout_alignEnd="@+id/line_mylvitem"
                android:layout_alignRight="@+id/line_mylvitem"
                android:text="1234244444444444"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_model_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_mylvitem"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:text="1234244444444444"
                android:textColor="#000"
                android:textSize="14sp" />
            <View
                android:id="@+id/line_mylvitem"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_model_mylvitem"
                android:layout_marginRight="10dp"
                android:background="#ff0000" />

            <TextView
                android:id="@+id/tv_company_mylvitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginRight="10dp"
                android:paddingBottom="2dp"
                android:text="中古测试cesceddddddddddddddddddc"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_num2_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="津MRW434"
                android:textColor="#000"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/line_mylvitem"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="津MRW434"
                android:textColor="#000"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvprice_mylvitem"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_num2_mylvitem"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="23.12"
                android:textColor="#000000"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:visibility="invisible"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="shijian "
            android:id="@+id/tv_time_itemylv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="67dp">
        <TextView
            android:id="@+id/tv_user_itemylv2"

            android:text="shijian "
            android:layout_weight="8"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_xiajia"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/denglu_bg"
            android:text="下架"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_gravity="right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F8F8FF"
        android:layout_below="@id/img_item_mylv"
        android:layout_marginRight="10dp"/>
</LinearLayout>
