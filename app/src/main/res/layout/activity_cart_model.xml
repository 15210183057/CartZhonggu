<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a123456.zhonggu.CartModelActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titleBar"
        >
        <TextView
            android:id="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="返回"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择品牌"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="18sp"/>
        <View
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:background="@drawable/titlebar"
            android:layout_below="@id/tv_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"/>
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout
           android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:text=" 品牌 ："/>
           <RelativeLayout
               android:id="@+id/relative3_newFragment"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@drawable/juxingnull">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/sort37"/>
               <TextView

                   android:id="@+id/tv3_newFragment"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="3"
                   android:textSize="16sp"
                   android:gravity="center_vertical"
                   android:layout_gravity="center_vertical"/>
           </RelativeLayout>
       </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative4_newFragment"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_cart_ser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 车系 ："
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@mipmap/sort37"/>
            <TextView
                android:layout_toRightOf="@id/tv_cart_ser"
                android:id="@+id/tv4_newFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="@drawable/juxingnull"
                android:layout_gravity="center_vertical"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative5_newFragment"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
           >
            <TextView
                android:id="@+id/tv_cart_model"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 车型 ："
                android:gravity="center_vertical"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/sort37"/>
            <TextView
                android:id="@+id/tv5_newFragment"
                android:layout_toRightOf="@id/tv_cart_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/juxingnull"/>

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_okmodel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="确认"
        android:background="@drawable/denglu_bg"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/linear_model"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/lv1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:divider="@null"
            android:dividerHeight="@null"
            android:layout_height="match_parent"></ListView>
        <ListView
            android:id="@+id/lv2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:divider="@null"
            android:dividerHeight="@null"
            android:layout_height="match_parent"></ListView>
        <ListView
            android:id="@+id/lv3"
            android:layout_weight="1"
            android:divider="@null"
            android:layout_width="0dp"
            android:dividerHeight="@null"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</LinearLayout>
